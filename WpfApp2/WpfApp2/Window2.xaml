<Window x:Class="WpfApp2.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window2" Height="400" Width="600">
    
    <Viewbox MinHeight="350" MinWidth="550" Stretch="Fill">
            <Grid Height="350" Width="550">
            <Grid.Resources>
                <ImageBrush x:Key="Meme" ImageSource="meme.png" Stretch="UniformToFill"/>
            </Grid.Resources>


        <Rectangle Grid.ColumnSpan="4" Grid.RowSpan="12" Margin="0,0,0,-0.8">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >

                    <GradientStop Color="#FF08080E" Offset="0.2" />

                    <GradientStop Color="#FF2C2F3C" Offset="0.5" />

                    <GradientStop Color="#FF08080F" Offset="0.8" />


                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
            <Image Source="{StaticResource Meme}" Stretch="Fill" HorizontalAlignment="Left" MinHeight="100" VerticalAlignment="Top" MinWidth="100" Margin="215,116,0,0"/>
        </Grid>
    </Viewbox>
</Window>
